@model Login
@{
    ViewData["Title"] = "Login";
}
<!------ Include the above in your HEAD tag ---------->
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" asp-controller="Account" asp-action="Login" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label asp-for="Email" class="text-info">Username:</label><br>
                                <input asp-for="Email" id="username" class="form-control" value="nhatnamtran100217@gmail.com">
                                <input type="hidden" asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="text-info">Password:</label><br>
                                <input asp-for="Password" id="password" class="form-control" value="Asdf1234!">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="RememberMe"> Remember Me
                                    </label>
                                </div>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                            <div id="register-link" class="text-right">
                                <a asp-controller="Account" asp-action="Register" class="text-info">Register here</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}